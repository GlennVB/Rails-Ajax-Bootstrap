<div class="row">
  <div class="col-md-12">
    <%% if notice != nil && notice != "" %>
      <div class="alert alert-info" id="notice"><%%= notice %></div>
    <%% end %>

    <h1>Showing <%= singular_table_name.titleize %></h1>

    <dl class="dl-horizontal">
      <% attributes.reject(&:password_digest?).each do |attribute| -%>
        <dt>
          <%= attribute.human_name %>:
        </dt>
        <dd>
          <%%= @<%= singular_table_name %>.<%= attribute.name %> %>
        </dd>
      <% end -%>
    </dl>

    <%%= link_to 'Edit', edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), :class => "btn btn-primary pull-right" %>
    <%%= link_to 'Back', <%= index_helper %>_path, :class => "btn btn-default pull-right" %>
  </div>
</div>
